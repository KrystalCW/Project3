  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap": "^4.3.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.6.1",
    "react-background-slider": "^1.2.0",
    "react-bootstrap": "^1.0.0-beta.9",
    "react-scroll-parallax": "^2.1.2"
  }
}
